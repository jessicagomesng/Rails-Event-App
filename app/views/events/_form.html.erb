<% if @event.errors.any? %>
<div id="error_explanation">
<h3>Sorry, please fix the <%= pluralize(@event.errors.count, "error")%> and try again:<h3>
<ul>
    <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
</ul>
</div>
<% end %>

<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label "Event Start Date:" %>
<%= f.date_field :start_date %><br>
<%= f.label "Event Start Time:" %>
<%= time_field_tag :start_time %><br>
<%= f.label "Event End Date:" %>
<%= f.date_field :end_date %><br>
<%= f.label "Event End Time:" %>
<%= time_field_tag :end_time %><br>
<%= f.label "Event Price:" %>
<%= f.number_field :price, step: 0.01 %><br>
<%= f.label "Event Location:" %>
<%= f.collection_radio_buttons(:location_id, Location.all, :id, :name) do |b|%>
    <br><%= b.radio_button %> <%= b.label %>
<% end %><br>
<p class="tooltip">Don't see your desired location? <%= link_to "Create location", new_location_path %>, then try again</p>
<%= f.label "Link an image for the event here (optional):" %>
<%= f.text_field :image_url %><br>
<%= f.label "Maximum Capacity:" %>
<%= f.number_field :maximum_capacity %><br>
<%= f.label "Minimum Age (optional):" %>
<%= f.number_field :minimum_age %><br>
