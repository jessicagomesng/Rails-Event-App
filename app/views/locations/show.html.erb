<h2><%= @location.name %></h2><br>

<div class="show">

<p class="label">Address:</p>
<p class="answer"><%= @location.address %></p><br>
<p class="label">Maximum capacity:</p>
<p class="answer"><%= @location.maximum_capacity %></p><br><br>
</div> <br><br>

<%= render :partial => "filter" %>

<% if admin %>
<h3>Modify Location</h3><br>
<div class="form">
    <div class="button">
    <%= link_to "Edit/Delete Location", edit_location_path(@location), :class => 'button' %>
    <%= link_to "Create New Event at this Location", new_location_event_path(@location), :class => 'button' %>
    </div>
</div>
<% end %><br>