<h3>See Events at this Location</h3><br>
<div class="form">
    <%= form_tag "/locations/#{@location.id}/events", :method => :get do %>
        <%= radio_button_tag 'filter', 'all' %>
        <%= label_tag 'all' %>
        <%= radio_button_tag 'filter', 'upcoming' %>
        <%= label_tag 'upcoming' %>
        <%= radio_button_tag 'filter', 'past' %>
        <%= label_tag 'past' %>
        <div class="button">
            <%= submit_tag 'View Events' %>
        </div>
    <% end %>
</div>
<br>